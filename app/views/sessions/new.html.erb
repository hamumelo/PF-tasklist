<h2>Log in</h2>

<%= form_with model: @user, url: login_path, local: true do |f| %>

  <div class="name_pass">
    <%= f.label :氏名パスワード %>
    <%= f.text_field :name_pass %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>