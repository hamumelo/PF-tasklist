<%= render 'public/header' %>

<h1>タスク修正</h1>

<%= form_with model: @event, url: event_path, local:true do |f| %>

  <div class="title">
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>

    <div class="time">
    <%= f.label :時間 %>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= f.label :タスク内容 %>
    <%= f.text_area :content %>
  </div>

     <div class="form-group row mt-3">
       <div class="col-sm-1">
    <%= f.submit '変更を保存', class:"btn btn-success btn-md btn-block" %>
       </div>
      </div>
     </div>

<% end %>